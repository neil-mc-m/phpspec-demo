{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for key, value in advert_types %}
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ value }}</h5>
                            <p class="card-text">{{ value }} advert type</p>
                            <a href="/{{ value }}" class="btn btn-primary">{{ value }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
